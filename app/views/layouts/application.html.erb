<!DOCTYPE html>
<html>
<head>
  <title>SCDBoot - Online store</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="top_bar">

  <%if signed_in?%>
    
    <li>
        <%= link_to  destroy_user_session_path, method: :delete  do%>
            <i class="fa fa-sign-out"></i>
        <%end%>
    </li>
    <li>
        <%= link_to edit_user_registration_path do%>
            <i class="fa fa-user"></i>
        <%end%>
    </li>
    <li>
        <%= link_to cart_path do%>
            <i class="fa fa-shopping-cart"></i>
            <%if !current_user.nil? %>
                <span>(<span class="cart-count"><%=current_user.cart_count%></span>)</span>
            <%else%>
                <span>(<span class="cart-count">0</span>)</span>
            <%end%>
        <%end%>
    </li>
  <%else%>
    <li>
        <%=link_to new_user_registration_path, alt:"Register" do%>
            <i class="fa fa-plus-square-o"></i>
        <%end%>
    </li>
    <li>
        <%=link_to new_user_session_path do%>
            <i class="fa fa-sign-in"></i>
        <%end%>
    </li>
    <li>
        <%= link_to cart_path do%>
            <i class="fa fa-shopping-cart"></i>
            <span>(<span class="cart-count">0</span>)</span>
        <%end%>
    </li>
  <%end%>
    
</div>
<!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to '', root_path, class: "navbar-brand" %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <%= yield :top_menu %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            
        </div>
        <!-- /.container -->
    </nav>
<!-- Page Content -->
	
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <%= yield :top_category_description %>
        </div>
        <div class="row">
            <%= yield %>
        </div>

         
        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p align= "center">Copyright &copy; SCDBoot 2014</p>
                </div>
            </div>
        </footer>

    </div>

</body>
</html>
