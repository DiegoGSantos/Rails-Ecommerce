<% content_for :top_category_description do %> 
  <%= render partial: "top_description", locals: { category: 'Checkout', 
                           description: 'Please confirm your informations' }%>
 <% end %> 

<div class="col-md-4 text-center">
<h3>Customer Information:</h3>
 <%= form_for(@customer) do |f| %>

  <div class="field">
    <%= f.label :province_id %><br>
    <%= f.number_field :province_id %>
  </div>
  
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
<% end %>
</div>

<div class="col-md-4 text-center">
<h3>Shipping address:</h3>
<%= form_for(@address) do |f| %>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :postal_code %><br>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
<% end %>
</div>

<div class="col-md-4 text-center">
<h3>Payment Details:</h3>
<%= form_for(@payment_detail) do |f| %>

  <div class="field">
    <%= f.label :card_holder_name %><br>
    <%= f.text_field :card_holder_name %>
  </div>
  <div class="field">
    <%= f.label :card_number_string %><br>
    <%= f.text_field :card_number_string %>
  </div>
  <div class="field">
    <%= f.label :card_valid_date %><br>
    <%= f.text_field :card_valid_date %>
  </div>
<% end %>
</div>

<div class="col-lg-12">
  <%=link_to (button_tag "Place Order", { class: "btn btn-primary", id: "btn_place_order"}), checkout_path%>
</div>